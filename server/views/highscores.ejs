<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hangman Highscores</title>
    <link rel="stylesheet" href="/styles/hangmanstyle.css">
</head>

<body>
    <div class="main-container">
        <%- include('navbar.ejs') %>

            <div class="hangman-scores">
                <h1>High Score List</h1>
                <table>
                    <tr>
                        <th>Username</th>
                        <th>Games Played</th>
                        <th>Wins</th>
                        <th>Losses</th>
                        <th>Win Percentage</th>
                    </tr>
                    <% users.forEach(user=> { %>
                        <tr>
                            <td>
                                <%= user.username %>
                            </td>
                            <% if (user.hangmanRecords && user.hangmanRecords.length> 0) { %>
                                <% const totalGames=user.hangmanRecords.length; %>
                                    <% const wins=user.hangmanRecords.filter(record=> record.isWin).length; %>
                                        <% const losses=totalGames - wins; %>
                                            <% const winPercentage=(wins / totalGames) * 100; %>
                                                <td>
                                                    <%= totalGames %>
                                                </td>
                                                <td>
                                                    <%= wins %>
                                                </td>
                                                <td>
                                                    <%= losses %>
                                                </td>
                                                <td>
                                                    <%= winPercentage.toFixed(2) %>%
                                                </td>
                                                <% } else { %>
                                                    <td>0</td>
                                                    <td>0</td>
                                                    <td>0</td>
                                                    <td>0.00%</td>
                                                    <% } %>
                        </tr>
                        <% }); %>
                </table>
            </div>
    </div>
</body>

</html>